<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.talis.mapper.empMapper">
<!--    更新员工-->
    <update id="update">
        update emp
        set
            <if test="username!=null and username!=''">
                username=#{username},
            </if>
            <if test="username!=null and username!=''">password=#{password},</if>
            <if test="username!=null and username!=''">name=#{name},</if>
            <if test="username!=null and username!=''">image=#{image},</if>
            <if test="username!=null and username!=''"> job=#{job},</if>
            <if test="username!=null and username!=''">entrydate=#{entrydate},</if>
            <if test="username!=null and username!=''">dept_id=#{deptId},</if>
            <if test="username!=null and username!=''">update_time=#{updateTime}</if>







        where id = #{id}
    </update>

    <select id="list" resultType="com.example.talis.pojo.Emp">
        select *
        from emp
        <!--        动态where和自动去除and-->
        <where>
            <if test="name!=null">
                name like concat('%', #{name}, '%')
            </if>
            <if test="gender!=null">
                and gender = #{gender}
            </if>
            <if test="begin!=null and end!=null">
                and entrydate between #{begin} and #{end}
            </if>
        </where>
        order by update_time desc
    </select>
<!--    批量删除id-->
    <delete id="delete">
        delete from emp where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

</mapper>