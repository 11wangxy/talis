<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.talis.mapper.empMapper">
    <select id="list" resultType="com.example.talis.pojo.Emp">
        select *
        from emp
<!--        动态where和自动去除and-->
        <where>
        <if test="name!=null">
            name like concat('%', #{name}, '%')
        </if>
        <if test="gender!=null">
            and gender = #{gender}
        </if>
        <if test="begin!=null and end!=null">
            and entrydate between #{begin} and #{end}
        </if>
        </where>
        order by update_time desc
    </select>
</mapper>